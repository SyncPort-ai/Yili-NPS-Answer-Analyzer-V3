# NPS V3 Analysis System - Development Dockerfile
# Optimized for local development with debugging and live reload capabilities

FROM yldc-docker.pkg.coding.yili.com/python-llmydy-3.11:v1.0.0

# Set environment variables for development
ENV PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    NPS_V3_ENV=development \
    NPS_V3_DEBUG=true \
    NPS_V3_LOG_LEVEL=DEBUG \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install development tools and dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    wget \
    nano \
    vim \
    htop \
    tree \
    jq \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements files
COPY requirements.txt requirements-deployment.txt requirements-dev.txt ./

# Install Python dependencies with Chinese PyPI mirror
RUN pip install --no-cache-dir \
    --index-url https://mirrors.aliyun.com/pypi/simple/ \
    --trusted-host mirrors.aliyun.com \
    -r requirements.txt \
    -r requirements-deployment.txt \
    -r requirements-dev.txt

# Create development directories
RUN mkdir -p \
    /app/logs \
    /app/outputs/results \
    /app/outputs/reports \
    /app/outputs/monitoring \
    /app/data/temp \
    /app/data/cache \
    /app/notebooks \
    /app/debug

# Copy application code
COPY . .

# Install application in development mode
RUN pip install -e .

# Create development user (optional - can run as root in dev)
RUN groupadd -r devuser && useradd -r -g devuser -s /bin/bash devuser

# Set proper permissions
RUN chown -R devuser:devuser /app

# Install development tools
RUN pip install \
    ipython \
    jupyter \
    pytest-cov \
    pytest-xdist \
    pytest-html \
    black \
    flake8 \
    mypy \
    pre-commit \
    debugpy

# Expose ports for application and debugging
EXPOSE 8000 8001 5678

# Development health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=2 \
    CMD curl -f http://localhost:8000/healthz || exit 1

# Default development command with debug support
CMD ["python", "-m", "debugpy", "--listen", "0.0.0.0:5678", "--wait-for-client", "-m", "uvicorn", "nps_report_v3.api:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--log-level", "debug"]